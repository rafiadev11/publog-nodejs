<div class="row">
	<div class="col-lg-8 offset-2">
		{{#each articles}}
			<div class="card mt-4">
				<img src="{{this.image}}"
				     class="card-img-top"
				     alt="Profile Photo">
				<div class="card-body">
					<h5 class="card-title">{{this.title}}</h5>
					<div class="card-text mb-2">
						{{this.description}}
					</div>
					<a href="/{{this.slug}}"
					   class="btn btn-success">Read more</a>
				</div>
			</div>
		{{else}}
			<h2 class="text-center mt-5"><em>Be the first to write an article on this topic</em></h2>
		{{/each}}
	</div>
</div>