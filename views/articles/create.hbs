<div class="row">
	<div class="col-lg-8 offset-2">
		<div class="card">
			<div class="card-body">
				<h1>New Article</h1>
				<form action="/store"
				      method="post">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<label for="title"
								       class="required">Title</label>
								<input name="title"
								       id="title"
								       class="form-control"
								       placeholder="Title"
								       required>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<div class="form-group">
								<label for="image"
								       class="required">Image</label>
								<input name="image"
								       id="image"
								       class="form-control"
								       placeholder="Image"
								       required>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<div class="form-group">
								<label for="description"
								       class="required">Description</label>
								<textarea name="description"
								          id="description"
								          class="form-control"
								          rows="2"
								          required></textarea>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<div class="form-group">
								<label for="content"
								       class="required">Content</label>
								<textarea name="content"
								          id="content"
								          class="form-control tinymce"
								          rows="10"></textarea>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<div class="form-group">
								<label for="topics"
								       class="required">Topics
								</label>
								<br>
								<small><em>(You can select multiple topics)</em></small>
								<select name="topics[]"
								        id="topics"
								        class="form-control multiSelect"
								        multiple
								        required>
									<option value="">Select Your Topics</option>
									{{#each topics}}
										<option value="{{this.name}}">{{this.name}}</option>
									{{/each}}
								</select>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<div class="form-group">
								<label for="authorName"
								       class="required">Your Name</label>
								<input name="authorName"
								       id="authorName"
								       class="form-control"
								       placeholder="Your Name"
								       required>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<button type="submit"
							        class="btn btn-success"><i class="fas fa-edit"></i> Create
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>