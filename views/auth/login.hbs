<div class="row">
	<div class="col-lg-6 offset-3">
		<div class="card">
			<div class="card-body">
				<h1>Sign in</h1>
				{{#if messages.error}}
					<div class="alert alert-danger">
						{{messages.error}}
					</div>
				{{/if}}
				<form action="/login"
				      method="post">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<label for="email"
								       class="required">Email Address</label>
								<input type="email"
								       name="email"
								       id="email"
								       class="form-control"
								       placeholder="Email Address"
								       required>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<div class="form-group">
								<label for="password"
								       class="required">Password</label>
								<input type="password"
								       name="password"
								       id="password"
								       class="form-control"
								       placeholder="Password"
								       required>
							</div>
						</div>
						<div class="col-lg-12 mt-4">
							<button type="submit"
							        class="btn btn-success"><i class="fas fa-edit"></i> Login
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>